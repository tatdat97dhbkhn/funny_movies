<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'space-y-6') do |f| %>
  <div>
    <label for="email" class="block text-sm font-medium leading-6 text-balance">Email address</label>
    <div class="mt-2">
      <%= f.email_field :email,
                        class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1
                                ring-inset focus:ring-2 focus:ring-inset focus:ring-black
                                sm:text-sm sm:leading-6',
                        placeholder: 'david@gmail.com' %>
    </div>
  </div>

  <div class="mt-3">
    <div class="flex items-center justify-between">
      <label for="password" class="block text-sm font-medium leading-6 text-black">Password</label>
    </div>
    <div class="mt-2">
      <%= f.password_field :password,
                           class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1
                                   ring-inset focus:ring-2 focus:ring-inset focus:ring-black
                                   sm:text-sm sm:leading-6',
                           placeholder: 'Enter your password'
      %>
    </div>
  </div>

  <div class="mt-3">
    <button type="submit" class="flex w-full justify-center rounded-md bg-slate-500 px-3 py-1.5 text-sm font-semibold
                                 leading-6 text-white shadow-sm hover:bg-slate-400 focus-visible:outline
                                 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-500">
      Sign in
    </button>
  </div>
<% end %>

<p class="mt-10 text-center text-sm text-gray-400">
  Not a member?
  <%= link_to 'Sign up', new_user_registration_path, class: 'font-semibold leading-6 text-slate-500 hover:text-slate-400' %>
</p>
