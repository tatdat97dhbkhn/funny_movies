<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'space-y-6',
             data: {
               'controller': 'users--new'
             }) do |f| %>

  <div>
    <label for="email" class="block text-sm font-medium leading-6 text-balance">Email address</label>
    <div class="mt-2">
      <%= f.email_field :email,
                        class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1
                                ring-inset focus:ring-2 focus:ring-inset focus:ring-black
                                sm:text-sm sm:leading-6',
                        placeholder: 'david@gmail.com' %>
    </div>
  </div>

  <div class="mt-3">
    <div class="flex items-center justify-between">
      <label for="name" class="block text-sm font-medium leading-6 text-balance">Name</label>
    </div>
    <div class="mt-2">
      <%= f.text_field :name,
                       class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1
                               ring-inset focus:ring-2 focus:ring-inset focus:ring-black
                               sm:text-sm sm:leading-6',
                       placeholder: 'Enter your name'
      %>
    </div>
  </div>

  <div class="mt-3">
    <div class="flex items-center justify-between">
      <label for="password" class="block text-sm font-medium leading-6 text-black">Password</label>
    </div>
    <div class="mt-2">
      <%= f.password_field :password,
                           class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1
                                  ring-inset focus:ring-2 focus:ring-inset focus:ring-black
                                  sm:text-sm sm:leading-6',
                           placeholder: 'Enter your password'
      %>
    </div>
  </div>

  <div class="mt-3">
    <div class="flex items-center justify-between">
      <label for="password" class="block text-sm font-medium leading-6 text-black">Password confirmation</label>
    </div>
    <div class="mt-2">
      <%= f.password_field :password_confirmation,
                           class: 'block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1
                                  ring-inset focus:ring-2 focus:ring-inset focus:ring-black
                                  sm:text-sm sm:leading-6',
                           placeholder: 'Enter your password confirmation'
      %>
    </div>
  </div>

  <div class="mt-3">
    <div class="col-span-6 sm:col-span-4">
      <%= f.file_field :avatar, class: 'hidden',
                       data: {
                         'users--new-target': 'fileUpload',
                         action: 'change->users--new#preview'
                       }
      %>

      <div class="text-center">
        <div class="mt-2">
          <img src="" class="w-40 h-40 m-auto rounded-full shadow" alt="avatar-preview" data-users--new-target="imgPreview">
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300
                  rounded-md font-semibold text-xs text-gray-700 uppercase tracking-widest shadow-sm hover:text-gray-500
                  focus:outline-none focus:border-blue-400 focus:shadow-outline-blue active:text-gray-800
                  active:bg-gray-50 transition ease-in-out duration-150 mt-2"
                data-action="click->users--new#selectFile">
          Select New Avatar
        </button>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <button type="submit" class="flex w-full justify-center rounded-md bg-slate-500 px-3 py-1.5 text-sm font-semibold
                                 leading-6 text-white shadow-sm hover:bg-slate-400 focus-visible:outline
                                 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-500">
      Sign up
    </button>
  </div>
<% end %>

<p class="mt-10 text-center text-sm text-gray-400">
  Do have an account ?
  <%= link_to 'Login', new_user_session_path, class: 'font-semibold leading-6 text-slate-500 hover:text-slate-400' %>
</p>
