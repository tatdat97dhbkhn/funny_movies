<div class="post p-5 lg:p-1 rounded-md">
  <div class="lg:fixed lg:top-7 lg:left-14 lg:w-3/12 md:fixed md:w-5/12">
    <% if current_user %>
        <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full mb-4">
          <div class="relative">
            <%= image_tag 'banner.svg', class: 'w-full rounded-t-lg', alt: "Banner Profile" %>
            <%= image_tag current_user.avatar.presence || 'cat.jpeg', class: 'absolute bottom-0 left-2/4 transform -translate-x-1/2 translate-y-1/2 w-24 h-24 rounded-full border-4 border-white', alt: "Profile Picture" %>
          </div>
          <div class="flex items-center mt-10">
            <h2 class="text-xl font-bold text-gray-800 text-ellipsis overflow-hidden"><%= current_user.name %></h2>
          </div>
          <p class="text-gray-700 mt-2"> Life is too short to dwell on the past, embrace the present and look forward to the future. </p>
          <div class="flex items-center mt-4 space-x-4">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_method: :delete },
                        class: 'inline-block px-4 py-3 border border-[#64748B] text-[#64748B] font-medium rounded focus:ring-0' %>
          </div>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full">
          <%= form_with(url: movies_path,
                        method: :post,
                        id: 'movie-create-form',
                        data: {
                          controller: "components--reset-form",
                          action: "turbo:submit-end->components--reset-form#reset"
                        }) do |f| %>
            <div class="mb-6">
              <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Post Content:</label>
              <%= f.text_area :description,
                             class: 'w-full border-2 rounded-md px-4 py-2 leading-5 transition duration-150
                                      ease-in-out sm:text-sm
                                      sm:leading-5 resize-none focus:outline-none focus:border-blue-500',
                             placeholder: "What's on your mind?",
                             rows: 4
              %>
            </div>
            <div class="mb-6">
              <label for="youtube_url" class="block text-gray-700 text-sm font-bold mb-2">Youtube URL:</label>
              <%= f.text_area :youtube_url,
                              class: 'w-full border-2 rounded-md px-4 py-2 leading-5 transition duration-150 ease-in-out sm:text-sm
                                      sm:leading-5 resize-none focus:outline-none focus:border-blue-500',
                              placeholder: "Youtube URL",
                              rows: 4
              %>
            </div>
            <div class="flex items-center justify-between">
              <button type="submit" class="flex justify-center items-center bg-blue-500 hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue text-white py-2 px-4 rounded-md transition duration-300 gap-2"> Post <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 24 24" id="send" fill="#fff">
                <path fill="none" d="M0 0h24v24H0V0z"></path>
                <path d="M3.4 20.4l17.45-7.48c.81-.35.81-1.49 0-1.84L3.4 3.6c-.66-.29-1.39.2-1.39.91L2 9.12c0 .5.37.93.87.99L17 12 2.87 13.88c-.5.07-.87.5-.87 1l.01 4.61c0 .71.73 1.2 1.39.91z"></path>
              </svg>
              </button>
            </div>
          <% end %>
        </div>
      <% else %>
      <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full mb-4">
        <div class="relative">
          <%= image_tag 'banner.svg', class: 'w-full rounded-t-lg', alt: "Banner Profile" %>
        </div>
        <p class="text-[#363636] mb-4 mt-3 font-bold">Log in to share videos, like videos</p>
        <%= link_to 'Login', new_user_session_path, class: 'inline-block px-4 py-3 border border-[#64748B] text-[#64748B] font-medium rounded focus:ring-0' %>
      </div>
    <% end %>
  </div>
</div>
